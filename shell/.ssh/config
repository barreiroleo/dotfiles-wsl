Host *
    SetEnv TERM=xterm-256color
    ServerAliveInterval 120
    ForwardX11 yes

# ssh-copy-id -i ~/.ssh/id_ed25519.pub lbarreiro-docker
Host lbarreiro-docker
    User lbarreiro
    HostName 192.168.0.1
    Port 22
    ForwardX11 yes

Host lbarreiro-workstation
    User lbarreiro
    Hostname xx.xxx.x.xxx
    Port 22
    LocalForward 9090 localhost:9090
    # NoMachine port forwarding
    # LocalForward 4003 localhost:4000
    IdentityFile ~/.ssh/id_ed25519
    # X11 forwarding
    ForwardX11 yes
    ForwardAgent yes
    # Refresh every 2 minutes up to 30 tries. ~= 1hr
    # ServerAliveInterval 120
    # ServerAliveCountMax 30
